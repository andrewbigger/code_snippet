#!/usr/bin/env ruby

$LOAD_PATH.unshift(__dir__ + '/../lib')

require 'rubygems'
require 'optparse'
require 'highline'

require 'snippet'
require 'snippet/cli'

require 'byebug'

USAGE = "Snippet is a CLI tool for quick access to code snippets

Usage:\tarchetype <command> <variables> <opts>
Options:
  \t--trace\t\t trace mode on
  -l, --language\t snippet language filter
  -c, --copy\t\t copy snippet to clipboard

  -h, --help\t\t print usage

Commands:
  display\t finds and shows snippet
  list\t\t displays a list of snippets
  snippet_dir\t displays configured snippet path
".freeze

@trace = false
@overwrite = false

OptionParser.new do |opts|
  opts.banner = USAGE
  opts.on('--trace') { @trace = true }

  opts.on('-l', '--language STRING')  { |l| @lang = l }
  opts.on('-c', '--copy BOOL')        { @copy = true }

  opts.on_tail('-h', '--help') do
    Snippet::CLI.print_message_and_exit(USAGE)
  end
end.parse!

begin
  raise 'ERROR: no command provided' unless ARGV[0]

  cmd = ARGV.shift
  Snippet::CLI::Commands.public_send(
    cmd.to_sym,
    @lang,
    !@copy.nil?,
    ARGV
  )
rescue StandardError => e
  Snippet::CLI.print_message(e)
  Snippet::CLI.print_message(e.backtrace) if @trace
  Snippet::CLI.print_message("\n")
  Snippet::CLI.print_message_and_exit(USAGE)
end

exit(0)
